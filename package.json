{
  "name": "frontend-boilerplate",
  "version": "0.0.01",
  "description": "Front-end boilerplate with Webpack, Pug and Bulma",
  "main": "index.js",
  "repository": "https://github.com/eduardobbrito/frontend-boilerplate",
  "license": "MIT",
  "scripts": {
    "rimraf:dist": "rimraf dist/*",
    "webpack:dev": "webpack-dev-server --env.mode development --open",
    "webpack:prod": "webpack --env.mode production",
    "webpack:analyze": "yarn webpack:prod --env.presets analyze",
    "pug:build": "pug --pretty -o dist/html src/html",
    "pug:dev": "pug --pretty -w -o dist/html -s",
    "dev": "yarn && yarn rimraf:dist && run-p webpack:dev \"pug:dev {1}\" --",
    "build:production": "yarn && yarn rimraf:dist && run-s pug:build webpack:prod"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-imports": "^1.5.1",
    "babel-preset-env": "^1.7.0",
    "clean-webpack-plugin": "^2.0.2",
    "copy-webpack-plugin": "^5.0.3",
    "css-loader": "^2.1.1",
    "duplicate-package-checker-webpack-plugin": "^3.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-prettier": "^3.1.0",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.2",
    "postcss-loader": "^3.0.0",
    "prettier": "1.17.1",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "stylelint": "^10.0.1",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-scss": "^3.8.0",
    "webpack": "^4.32.2",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.2",
    "webpack-merge": "^4.2.1",
    "webpackbar": "^3.2.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "bulma": "^0.7.5",
    "html-loader": "^0.5.5",
    "mini-css-extract-plugin": "^0.7.0",
    "offline-plugin": "^5.0.7",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "pug": "^2.0.3",
    "pug-html-loader": "^1.1.5",
    "pug-loader": "^2.4.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "webpack-dev-server": "^3.5.1"
  }
}
